<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Portfolio Owner</label>
    <description>Access to manage assigned portfolios. Can view owned portfolios, approve/reject agent actions, and take over customer conversations.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <license>Salesforce</license>

    <!-- Custom Object: Agent_Activity__c (Read + Create) -->
    <objectPermissions>
        <object>Agent_Activity__c</object>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Campaign custom fields (mostly read, some edit) -->
    <fieldPermissions>
        <field>Campaign.Portfolio_Type__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Campaign.Agent_Autonomy__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Campaign.Portfolio_Owner__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Campaign.Escalation_Config__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Campaign.Is_Portfolio__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- CampaignMember custom fields -->
    <fieldPermissions>
        <field>CampaignMember.Priority__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>CampaignMember.Pending_Action_Type__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>CampaignMember.Agent_Suggestion__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>CampaignMember.Action_Due_Date__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>CampaignMember.Last_Agent_Action__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>CampaignMember.Lifetime_Value__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Case custom fields -->
    <fieldPermissions>
        <field>Case.Portfolio_Campaign__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Case.Agent_Suggestion__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Case.Escalation_Trigger__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Agent_Activity__c fields -->
    <fieldPermissions>
        <field>Agent_Activity__c.Contact__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Agent_Activity__c.Campaign__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Agent_Activity__c.Channel__c</field>
        <editable>true</editable>
